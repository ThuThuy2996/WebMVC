@{
}

<!-- Product section-->
<section class="py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="row gx-4 gx-lg-5 align-items-center">
            <div class="col-md-6"><img class="card-img-top mb-5 mb-md-0" src="@Model.Image" alt="..." /></div>
            <div class="col-md-6">
                <div class="small mb-1">@Model.ClubCategory</div>
                <h1 class="display-5 fw-bolder">@Model.Title</h1>
                <p class="lead">@Model.Description</p>
                <h8 class="display-5 fw-bolder">Location</h8>
                <ul>
                    <li>@Model.Address.Street, @Model.Address.City, @Model.Address.State </li>                  
                </ul>
            </div>
        </div>
    </div>
</section>
